import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import androidx.annotation.Nullable;
import androidx.appcompat.app.AppCompatActivity;

public class TravelScheduleActivity extends AppCompatActivity {

    private String cityName, travelPeriod;

    @Override
    protected void onCreate(@Nullable Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_travel_schedule);

        // Get the travel details from intent
        Intent intent = getIntent();
        if (intent != null) {
            cityName = intent.getStringExtra("cityName");
            travelPeriod = intent.getStringExtra("travelPeriod");
        }

        // Display the travel details
        // You can set these values to appropriate TextViews in your layout
        // For simplicity, we'll just print them to console
        System.out.println("City: " + cityName);
        System.out.println("Travel Period: " + travelPeriod);

        Button scheduleButton = findViewById(R.id.scheduleButton);
        Button checklistButton = findViewById(R.id.checklistButton);
        Button exchangeRateButton = findViewById(R.id.exchangeRateButton);

        scheduleButton.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                // Navigate to the travel schedule screen
                navigateToTravelScheduleScreen();
            }
        });

        checklistButton.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                // Navigate to the checklist screen
                navigateToChecklistScreen();
            }
        });

        exchangeRateButton.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                // Navigate to the exchange rate screen
                navigateToExchangeRateScreen();
            }
        });
    }

    private void navigateToTravelScheduleScreen() {
        // Add your logic for navigating to the travel schedule screen here
    }

    private void navigateToChecklistScreen() {
        // Add your logic for navigating to the checklist screen here
    }

    private void navigateToExchangeRateScreen() {
        // Add your logic for navigating to the exchange rate screen here
    }
}
